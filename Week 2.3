import java.io.*;
import java.util.*;
public class main{
    public static int prog(int n){
        if(n==1){
            return 0;
        }
        else if(n==2||n==3){
            return 1;
        }
        int first=0,second=1,third=1,current=0;
        for(int i=4;i<=n;i++){
            current=first+second+third;
            first=second;
            second=third;
            third=current;
        }
        return current;
    }
    public static void main(String a[]){
        Scanner input=new Scanner(System.in);
        int n=input.nextInt();
        System.out.println(prog(n));
    }
}
